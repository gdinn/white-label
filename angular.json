{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "white-label": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/white-label",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "aot": true,
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "mercado-pedro": {
              "styles": [
                "src/styles.scss"
              ],              
              "fileReplacements": [
                {
                  "replace": "./src/environments/mercado/environment.ts",
                  "with": "./src/environments/mercado-pedro/mercado-pedro.ts"
                }
              ],
              "stylePreprocessorOptions": {
                "includePaths": [
                  "./src/environments/mercado-pedro/styles"
                ]
              },
              "assets": [
                {
                  "glob": "**/*",
                  "input": "./src/assets",
                  "output": "/assets"
                },
                { 
                  "glob": "**/*", 
                  "input": "./src/environments/mercado-pedro/assets", 
                  "output": "assets/" 
                }
              ]
            },
            "mercado-pedro-prod": {
              "styles": [
                "src/styles.scss"
              ],              
              "fileReplacements": [
                {
                  "replace": "./src/environments/mercado/environment.ts",
                  "with": "./src/environments/mercado-pedro/mercado-pedro.prod.ts"
                }
              ],
              "stylePreprocessorOptions": {
                "includePaths": [
                  "./src/environments/mercado-pedro/styles"
                ]
              },
              "assets": [
                {
                  "glob": "**/*",
                  "input": "./src/assets",
                  "output": "/assets"
                },
                { 
                  "glob": "**/*", 
                  "input": "./src/environments/mercado-pedro/assets", 
                  "output": "assets/" 
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]              
            },            
            "mercado-luiz": {
              "styles": [
                "src/styles.scss"
              ],              
              "fileReplacements": [
                {
                  "replace": "./src/environments/mercado/environment.ts",
                  "with": "./src/environments/mercado-luiz/mercado-luiz.ts"
                }
              ],
              "stylePreprocessorOptions": {
                "includePaths": [
                  "./src/environments/mercado-luiz/styles"
                ]
              },
              "assets": [
                {
                  "glob": "**/*",
                  "input": "./src/assets",
                  "output": "/assets"
                },
                { 
                  "glob": "**/*", 
                  "input": "./src/environments/mercado-luiz/assets", 
                  "output": "assets/" 
                }
              ]
            },
            "mercado-luiz-prod": {
              "styles": [
                "src/styles.scss"
              ],              
              "fileReplacements": [
                {
                  "replace": "./src/environments/mercado/environment.ts",
                  "with": "./src/environments/mercado-luiz/mercado-luiz.prod.ts"
                }
              ],
              "stylePreprocessorOptions": {
                "includePaths": [
                  "./src/environments/mercado-luiz/styles"
                ]
              },
              "assets": [
                {
                  "glob": "**/*",
                  "input": "./src/assets",
                  "output": "/assets"
                },
                { 
                  "glob": "**/*", 
                  "input": "./src/environments/mercado-luiz/assets", 
                  "output": "assets/" 
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]              
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "white-label:build:mercado-pedro"
          },
          "configurations": {
            "mercado-pedro": {
              "browserTarget": "white-label:build:mercado-pedro"
            },
            "mercado-pedro-prod": {
              "browserTarget": "white-label:build:mercado-pedro-prod"
            },            
            "mercado-luiz": {
              "browserTarget": "white-label:build:mercado-luiz"
            },
            "mercado-luiz-prod": {
              "browserTarget": "white-label:build:mercado-luiz-prod"
            }            
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "white-label:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.scss"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.app.json",
              "tsconfig.spec.json",
              "e2e/tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "white-label:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "white-label:serve:production"
            }
          }
        }
      }
    }},
  "defaultProject": "white-label"
}
